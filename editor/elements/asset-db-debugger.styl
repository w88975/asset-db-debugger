:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0

    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    font-size: 13px
    font-family: Helvetica,Arial,sans-serif

    margin-top: 10px
    margin-left: 3px
    margin-right: 3px
    margin-bottom: 3px

    color: #999
    cursor: default
    outline: none

    .view {
        position: relative
        border: 1px solid #000
        box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2)

        background-color: #333

        overflow-x: hidden
        overflow-y: auto
    }

    span.space {
        width: 5px
        height: 5px
    }

    table {
        width: 100%
        white-space: nowrap
        font-size: 12px
        font-family: Helvetica,Arial,sans-serif
        border: 1px solid #555

        .key {
            color: #aaa
        }

        .value {
            color: #d60
        }
    }
    table, th, td {
        border-collapse: collapse
        table-layout: fixed
    }
    tr {
        background: #333

        &:nth-child(even) {
            background: #333 - 20%
        }
    }
    th {
        font-size: 15px
        text-align: left

        background: #800
    }
    th, td {
        padding: 2px 5px
        border-left: 1px solid #555

        overflow: hidden
        text-overflow: ellipsis

        &:first-child {
            border-left: 0px
        }
    }
}
